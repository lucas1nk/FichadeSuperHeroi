<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/rootLayoutFicha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


        <ImageView
            android:id="@+id/imgAvatarFinal"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/superman"
            android:contentDescription="Avatar" />


        <TextView
            android:id="@+id/txtCodinome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codinome: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />


        <TextView
            android:id="@+id/txtAlinhamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alinhamento: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />


        <TextView
            android:id="@+id/txtPoderes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poderes: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>